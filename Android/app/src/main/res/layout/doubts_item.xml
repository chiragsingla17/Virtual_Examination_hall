<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_marginBottom="10dp"
            android:background="#ffdb58"
            android:foregroundGravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@android:color/white"
                android:paddingLeft="5dp"
                android:gravity="center"
                android:text="Solve this answer and earn coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/doubtCoinsAdded"
                android:textColor="@android:color/white"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_gravity="right"
                android:text="+100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
       <LinearLayout
           android:layout_gravity="center"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/doubtProfileImage"
               android:src="@drawable/gaurish"
               android:layout_width="45dp"
               android:layout_height="45dp"/>
           <LinearLayout
               android:layout_marginLeft="10dp"
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/doubtName"
                   android:textSize="15sp"
                   android:textStyle="bold"
                   android:textColor="@color/blackText"
                   android:text="Gaurish Anand"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:id="@+id/doubtSubject"
                   android:textColor="@android:color/holo_blue_light"
                   android:text="Chemisty"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
       </LinearLayout>
        <TextView
            android:id="@+id/doubtTextView"
            android:text="Can someone please explain Djikstra Algo?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/doubtImageView"
            android:src="@drawable/question_two"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:gravity="center"
                android:src="@drawable/camera"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
            <EditText
                android:hint="Type your answer here.."
                android:layout_gravity="center"
                android:src="@drawable/camera"
                android:scaleType="fitCenter"
                android:layout_marginLeft="2dp"
                android:layout_weight="10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:foregroundGravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_blue_dark"
                android:text="ANSWER"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>