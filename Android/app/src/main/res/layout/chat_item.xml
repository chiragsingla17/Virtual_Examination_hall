<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/personLinearLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="100dp"
        android:padding="10dp"
        android:background="@drawable/rounded_rectangle"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15sp"
            android:id="@+id/personTextView"
            android:text="Hey Gaurish! How may i help you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/personTime"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:text="2:26 PM"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/botLinearLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_gravity="left"
        android:layout_marginRight="100dp"
        android:padding="10dp"
        android:background="@drawable/rounded_rectangle_bot"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15sp"
            android:id="@+id/chatBotTextView"
            android:text="Hey Gaurish! How may i help you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/botTimeTextView"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:text="2:26 PM"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>